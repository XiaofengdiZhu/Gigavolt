<CanvasWidget xmlns="runtime-namespace:Game">
  <CanvasWidget Size="500, 440" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <BevelledRectangleWidget Style="{Styles/DialogArea}"/>
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      <LabelWidget Font="{Fonts/Pericles}" Text="[EditGVCopperHammerDialog:1]" HorizontalAlignment="Center"/>
      <CanvasWidget Size="0, 40"/>
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <LabelWidget Text="[EditGVCopperHammerDialog:4]" VerticalAlignment="Center"/>
        <CanvasWidget Size="10, 0"/>
        <SliderWidget Name="EditGVCopperHammerDialog.Slider" LabelWidth="60" Granularity="1" MinValue="0" MaxValue="3" Size="300, 40"/>
      </StackPanelWidget>
      <CheckboxWidget Name="EditGVCopperHammerDialog.Checkbox" Text="[EditGVCopperHammerDialog:5]" IsAutoCheckingEnabled="true" CheckboxSize="24, 24" HorizontalAlignment="Center" Margin="0, 20"/>
      <BlockIconWidget Name="EditGVCopperHammerDialog.Icon" Size="112, 112" HorizontalAlignment="Center"/>
      <CanvasWidget Size="0, Infinity"/>
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditGVCopperHammerDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditGVCopperHammerDialog:2]" Margin="20, 0"/>
        <BevelledButtonWidget Name="EditGVCopperHammerDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditGVCopperHammerDialog:3]"/>
      </StackPanelWidget>
    </StackPanelWidget>
  </CanvasWidget>
</CanvasWidget>